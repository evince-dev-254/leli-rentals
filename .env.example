# ============================================
# PAYMENT GATEWAY
# ============================================
# Paystack (Get your keys from https://dashboard.paystack.com/#/settings/developer)
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_live_your_public_key_here
PAYSTACK_SECRET_KEY=sk_live_your_secret_key_here

# ============================================
# SUPABASE DATABASE & AUTH
# ============================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=your_publishable_key_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ============================================
# GOOGLE OAUTH (for Supabase Auth)
# ============================================
# Get these from Google Cloud Console
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ============================================
# IMAGEKIT (Image Storage & CDN)
# ============================================
# Get these from https://imagekit.io/dashboard
NEXT_PUBLIC_IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id
NEXT_PUBLIC_IMAGEKIT_PUBLIC_KEY=public_your_public_key
IMAGEKIT_PRIVATE_KEY=private_your_private_key

# ============================================
# EMAIL SERVICE
# ============================================
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key

# ============================================
# GOOGLE SERVICES
# ============================================
# Google Maps API (for location picker)
# Get from https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Google Analytics
# Get from https://analytics.google.com/
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-YOUR_GA_ID

# ============================================
# APPLICATION URLS
# ============================================
# Development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Production (update with your domain)
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_ADMIN_URL=https://admin.yourdomain.com

# ============================================
# OPTIONAL SERVICES
# ============================================
# OpenAI (for AI features - optional)
NEXT_PUBLIC_OPENAI_API_KEY=sk-your_openai_key_here

# Admin Internal Token (for admin API access)
ADMIN_INTERNAL_TOKEN=your_secure_random_string_here

# ============================================
# NOTES
# ============================================
# Required for signup form:
# - NEXT_PUBLIC_SUPABASE_URL
# - NEXT_PUBLIC_SUPABASE_ANON_KEY
# - NEXT_PUBLIC_GOOGLE_MAPS_API_KEY (for location picker)
# - RESEND_API_KEY (for welcome emails)
#
# Required for listing creation:
# - NEXT_PUBLIC_IMAGEKIT_URL_ENDPOINT
# - NEXT_PUBLIC_IMAGEKIT_PUBLIC_KEY
# - IMAGEKIT_PRIVATE_KEY
# - NEXT_PUBLIC_GOOGLE_MAPS_API_KEY
#
# Required for payments:
# - NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY
# - PAYSTACK_SECRET_KEY
