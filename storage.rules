rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can upload their own profile images
    match /users/{userId}/profile/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can upload images for their listings
    match /listings/{listingId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && 
        (request.auth.uid == resource.metadata.ownerId || 
         request.auth.token.admin == true);
    }
    
    // Users can upload verification documents
    match /verification/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can upload ticket attachments
    match /tickets/{ticketId}/{fileName} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.metadata.userId || 
         request.auth.token.admin == true);
    }
    
    // Public assets (categories, etc.)
    match /public/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Default deny rule
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}